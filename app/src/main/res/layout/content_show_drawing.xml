<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/show_drawing" tools:context=".ShowDrawingActivity"
    android:layout_gravity="center_horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/output_image"
            android:layout_width="match_parent"
            android:layout_height="345dp"
            android:contentDescription="@string/showactivity_imgdsc"
            android:layout_marginTop="8dp" />

        <ImageButton
            android:id="@+id/finish_projector_button"
            android:layout_width="52dp"
            android:layout_height="55dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/ic_projector_stop"
            android:contentDescription="@string/stop_projector_button"
            android:singleLine="false"
            android:layout_gravity="end"
            android:textSize="32sp" />
    </FrameLayout>
</RelativeLayout>
